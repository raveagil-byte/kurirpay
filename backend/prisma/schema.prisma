generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  ADMIN
  COURIER
}

enum DeliveryStatus {
  PENDING
  APPROVED
  REJECTED
}

enum PaymentStatus {
  UNPAID
  PENDING_REQUEST
  PAID
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password      String
  role          Role      @default(COURIER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  deliveries    Delivery[]
  notifications Notification[]
  payments      Payment[]     @relation("CourierPayments")
  resetToken       String?
  resetTokenExpiry DateTime?
}

model Delivery {
  id            String         @id @default(uuid())
  courierId     String
  courier       User           @relation(fields: [courierId], references: [id])
  date          DateTime
  itemCount     Int
  ratePerItem   Int
  totalAmount   Int
  status        DeliveryStatus @default(PENDING) // Operational status (Approved by admin?)
  paymentStatus PaymentStatus  @default(UNPAID)
  paymentId     String?
  payment       Payment?       @relation(fields: [paymentId], references: [id])
  proofPhotoUrl String?
  notes         String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Payment {
  id        String     @id @default(uuid())
  amount    Float
  date      DateTime   @default(now())
  method    String     @default("CASH") // CASH, TRANSFER
  notes     String?
  courierId String
  courier   User       @relation("CourierPayments", fields: [courierId], references: [id])
  deliveries Delivery[]
  adminId   String?    // User ID of admin who processed
  createdAt DateTime   @default(now())
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  title     String
  message   String
  type      String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model SystemSettings {
  id                       String  @id @default(uuid())
  appName                  String  @default("KurirPay")
  deliveryRate             Int     @default(3000)
  currencySymbol           String  @default("Rp")
  allowCourierSelfRegister Boolean @default(false)
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  action    String   // e.g., "CREATE_DELIVERY", "PAY_SALARY"
  entity    String   // e.g., "Delivery", "Payment"
  entityId  String?  // The ID of the affected record
  details   String?  // JSON string or description of change
  ipAddress String?
  createdAt DateTime @default(now())
}
