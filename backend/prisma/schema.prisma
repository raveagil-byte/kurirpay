generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  COURIER
}

enum DeliveryStatus {
  PENDING
  APPROVED
  REJECTED
}

enum PaymentStatus {
  UNPAID
  PENDING_REQUEST
  PAID
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password      String
  role          Role      @default(COURIER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  deliveries    Delivery[]
  notifications Notification[]
}

model Delivery {
  id            String         @id @default(uuid())
  courierId     String
  courier       User           @relation(fields: [courierId], references: [id])
  date          DateTime
  itemCount     Int
  ratePerItem   Int
  totalAmount   Int
  status        DeliveryStatus @default(PENDING)
  paymentStatus PaymentStatus  @default(UNPAID)
  notes         String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  title     String
  message   String
  type      String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model SystemSettings {
  id                       String  @id @default(uuid())
  appName                  String  @default("KurirPay")
  deliveryRate             Int     @default(3000)
  currencySymbol           String  @default("Rp")
  allowCourierSelfRegister Boolean @default(false)
}
